<div id="popinFtvTdf" style="display:none;">
	<div class="mask"></div>
	<div id="popin-wrapper">
		<div class="top"></div>
		<div class="mid">
			<a href="#" class="close" title="fermer"></a>
			<div id="popin-content">
				<div class="content">
					<span class="closePopin" onclick="$('#popinFtvTdf').remove(); return false;">x</span>
					<div class="post">
						<%= post %>
						<% if(type=='twitter') { %>
							<span class="icon-twitter"></span>
						<% }else{ %>
							<span class="icon-facebook"></span>
						<% } %>
					</div>
				</div>
				<% if(type=='twitter') { %>
					<div class="footer twitter">
						<a class="answer" title="R&eacute;pondre" href="https://twitter.com/intent/tweet?in_reply_to=<%= post_id %>"><img src="css/res/img/tw_ans.png" />RÃ©pondre</a>
						<a class="forward" title="Retweeter" href="https://twitter.com/intent/retweet?tweet_id=<%= post_id %>"><img src="css/res/img/tw_retw.png" /> Retweeter</a>
						<a class="favorite" title="Favoris" href="https://twitter.com/intent/favorite?tweet_id=<%= post_id %>"><img src="css/res/img/tw_fav.png" />Favoris</a>
						<a class="website" title="Voir sur Twitter" href="https://twitter.com/<%= name %>/status/<%= post_id %>" target="_blank"><img src="css/res/img/tw_prev.png" />Voir sur Twitter</a>
						<div class="clearer"></div>
					</div>
				<% }else{ %>
					<div class="footer facebook">
						<!--
						<a onclick="fbLike(); return false;" title="J\'aime" class="like" target="_self">Like</a>
						<span class="sep"></span>
						<a onclick="fbComment(); return false;" title="Commenter" class="comment" target="_self">Commenter</a>
						<span class="sep"></span>
						-->
						<a href="javascript:fbShare();" title="Partager" class="share" target="_self">Partager</a>
						<div class="clearer"></div>
					</div>
				<% } %>
				<div class="clearer"></div>
			</div>
		</div>
		<div class="bot"></div>
	</div>
</div>