#scroller li .sondageQuestionSlide .options div{
	float:left;
	display:table;
	width:175px;
	text-align:center;
	padding:5px 10px;
	margin-bottom:20px;
	cursor:pointer;
	background:#280257;
	border:1px solid #280257;
	background:-moz-linear-gradient(top,  #280257 0%, #3d0068 100%);
	background:-webkit-gradient(linear, left top, left bottom, color-stop(0%,#280257), color-stop(100%,#3d0068));
	background:-webkit-linear-gradient(top,  #280257 0%,#3d0068 100%);
	background:-o-linear-gradient(top,  #280257 0%,#3d0068 100%);
	background:-ms-linear-gradient(top,  #280257 0%,#3d0068 100%);
	background:linear-gradient(to bottom,  #280257 0%,#3d0068 100%);
	filter:progid:DXImageTransform.Microsoft.gradient( startColorstr='#280257', endColorstr='#3d0068',GradientType=0 );
	-webkit-border-radius:5px;-moz-border-radius:5px;-o-border-radius:5px;border-radius:5px;
	border-radius:0\9; /* Cible IE9 et toutes les versions inférieures */
}


/*Sondage Question Slide*/
#scroller li .sondageQuestionSlide .counter .progressBar .progress{
	background:#280257;border:1px solid #280257;display:block;padding:0px;margin:0px;cursor:pointer;width:55px;height:7px;position:relative;top:-1px;
	background:-moz-linear-gradient(top,  #280257 0%, #3d0068 100%); /* FF3.6+ */
	background:-webkit-gradient(linear, left top, left bottom, color-stop(0%,#280257), color-stop(100%,#3d0068)); /* Chrome,Safari4+ */
	background:-webkit-linear-gradient(top,  #280257 0%,#3d0068 100%); /* Chrome10+,Safari5.1+ */
	background:-o-linear-gradient(top,  #280257 0%,#3d0068 100%); /* Opera 11.10+ */
	background:-ms-linear-gradient(top,  #280257 0%,#3d0068 100%); /* IE10+ */
	background:linear-gradient(to bottom,  #280257 0%,#3d0068 100%); /* W3C */
	filter:progid:DXImageTransform.Microsoft.gradient( startColorstr='#280257', endColorstr='#3d0068',GradientType=0 ); /* IE6-9 */
	-webkit-border-radius:4px;-moz-border-radius:4px;-o-border-radius:4px;border-radius:4px;
	border-radius:0\9; /* Cible IE9 et toutes les versions inférieures */
}



