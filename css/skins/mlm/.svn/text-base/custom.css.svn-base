#socialModule .header .title{
	color:#FFF;font-size:19px;padding:10px 10px 0;height:30px;width:280px;position:absolute;top:0px;display:block;font-family:Rockwell;
	/* background-image:url('../../res/img/skin/socialmodule_header_background_thin.png');background-repeat:repeat-x;background-position:top; */
	-webkit-border-radius:5px 5px 0px 0px;border-radius:5px 5px 0px 0px;
	background:-moz-linear-gradient(center top,  #3d0068 0%, #280257 100%); /* FF3.6+ */
	background:-webkit-gradient(linear, left top, left bottom, color-stop(0%,#3d0068), color-stop(100%,#280257)); /* Chrome,Safari4+ */
